{
    "name": "lotfio/conso",
    "description": "PHP console applications made easy",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "lotfio",
            "email": "contact@lotfio.net"
        }
    ],

    "require-dev": {
        "phpunit/phpunit" : "8.1.5"
    },
    
    "autoload":{
        "files": ["src/Conso/config/helpers.php"],
        "psr-4":{
            "Conso\\" : "src/Conso/"
        }
    },

    "autoload-dev":{
        "psr-4":{
            "Tests\\" : "test/"
        }
    },

    "bin": ["bin/conso"],

    "scripts" : {

        "post-root-package-install": [
            "@php -r \"file_exists('conso') || copy('conso', 'conso');\""
        ]
    }
}
