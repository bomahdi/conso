require 'vendor/autoload.php';

use Conso\Input;
use Conso\Output;
use Conso\Config;

/**
 * adding custom config
 *
 */

 Config::addCommands(__DIR__ . DIRECTORY_SEPARATOR .'Console');
 Config::addNamespace('Console\\');
/**
 * get instance
 */
$app = new Conso\App(new Input, new Output);


// start application
$app->run();